        </defaultConnector>
        <defaultConnectorLabel>Too Many Attempts</defaultConnectorLabel>
        <rules>
            <name>It_s_OK</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>varAttemptCount</leftValueReference>
                <operator>LessThanOrEqualTo</operator>
                <rightValue>
